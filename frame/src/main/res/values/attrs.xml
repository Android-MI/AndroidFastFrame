<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="Frame_RoundButton">
        <!-- 文字正常颜色 -->
        <attr name="rbTextColor" format="color" />
        <!--文字按下颜色-->
        <attr name="rbTextPressedColor" format="color" />
        <!-- 背景色 -->
        <attr name="rbSolidColor" format="color" />
        <!--按下的颜色-->
        <attr name="rbPressedColor" format="color" />
        <!--DisEnable的颜色-->
        <attr name="rbDisEnableColor" format="color" />
        <!-- 边框色 -->
        <attr name="rbStrokeColor" format="color" />
        <!-- 边框厚度 -->
        <attr name="rbStrokeWidth" format="dimension" />
        <!-- 边框虚线长度 -->
        <attr name="rbStrokeDashWidth" format="dimension" />
        <!-- 边框虚线间隙 -->
        <attr name="rbStrokeDashGap" format="dimension" />
        <attr name="rbCircle" format="boolean"></attr>
        <!-- 圆角半径，stadium 表示半径为 min(height,width) / 2-->
        <attr name="rbCornerRadius" format="dimension" />
        <!-- 左上角圆角-->
        <attr name="rbLeftTopCorner" format="dimension" />
        <!-- 右上角圆角-->
        <attr name="rbRightTopCorner" format="dimension" />
        <!-- 左下角圆角-->
        <attr name="rbLeftBottomCorner" format="dimension" />
        <!-- 右下角圆角-->
        <attr name="rbRightBottomCorner" format="dimension" />
    </declare-styleable>

    <!--底部Tab菜单-->
    <declare-styleable name="BottomTabBar">
        <attr name="tab_bar_background" format="color" />
        <attr name="tab_img_width" format="dimension" />
        <attr name="tab_img_height" format="dimension" />
        <attr name="tab_font_size" format="dimension" />
        <attr name="tab_padding_top" format="dimension" />
        <attr name="tab_img_font_padding" format="dimension" />
        <attr name="tab_padding_bottom" format="dimension" />
        <attr name="tab_isshow_divider" format="boolean" />
        <attr name="tab_divider_height" format="dimension" />
        <attr name="tab_divider_background" format="color" />
        <attr name="tab_selected_color" format="color" />
        <attr name="tab_unselected_color" format="color" />
    </declare-styleable>
    <!-- 圆形头像-->
    <declare-styleable name="CircleImageView">
        <attr name="civ_border_width" format="dimension" />
        <attr name="civ_border_color" format="color" />
        <attr name="civ_border_overlay" format="boolean" />
        <attr name="civ_fill_color" format="color" />
    </declare-styleable>

</resources>